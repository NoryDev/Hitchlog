%h1= @user.username.capitalize
%p
  = "#{@user} logged #{pluralize(@hitchhikes.size, 'hitchhike')}"
  = "and travelled #{@total_distance} kms by hitchhiking."
  %br
  = "#{@user} waited averagely #{@average_waiting_time} minutes per ride."
  %br
  = "#{@user} waited a total number of #{@total_waiting_time} minutes for #{pluralize(@waiting_time_array.size, 'ride')}."
%ul
  - for trip in @user.trips.order("date DESC")
    %li
      = trip.date.strftime("%d %b %y") unless trip.date
      = link_to raw("#{trip.from} &rarr; #{trip.to} #{distance(trip.distance)}, #{pluralize(trip.hitchhikes.size, 'ride')}"), trip_path(trip)

-content_for :head do
  %script{:type => "text/javascript", :src  => "http://www.google.com/jsapi"}  

=raw "<img src='#{@user.to_chart_image}'/>"