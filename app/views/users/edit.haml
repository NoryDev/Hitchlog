- title (t('.edit_profile'))
%h1
  =t('.edit_profile')
  (#{link_to t('.delete'), user_path(@user), :method => :delete, :confirm => t('general.confirm')})
= form_for current_user, :html => {:class => 'fancy_form'} do |f|
  .float_left
    = f.label :username
    %br/
    = f.text_field :username
    %br/
    = f.label :about_you
    (#{ t('general.supports_markdown')})
    %br/
    = f.text_area :about_you
    %br/
    = f.label :gender
    %br/
    = f.select :gender, [t('activerecord.models.male'), t('activerecord.models.female')]
    %br/
    = f.label :cs_user
    %br/
    = f.text_field :cs_user
    %br/
    = f.submit
  .float_right
    = t('.your_avatar')
    %br/
    = link_to gravatar_image_tag(current_user.email), current_user
    %br/
    = t('.hitchlog_only_supports_gravatar').html_safe

