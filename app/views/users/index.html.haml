%h1 #{t('.hitchhikers')}:

= will_paginate users, class: 'flickr_pagination'

%table.users.responsive
  %thead
    %tr
      %th= t('.username')
      %th= t('.logged_trips')
      %th= t('general.hitchhiked_kms')
      %th= t('general.hitchhiked_countries')
      %th= t('.no_of_rides')
      %th= t('.location')

  %tbody
    - users.each do |user|
      %tr{:id => "user_#{user.id}"}
        %td
          = render 'users/profile_image', type: 'square', user: user
          = link_to user, user_path(user)
          = hitchhiker_gender(user.gender)
        %td
          = user.trips.size
        %td
          %b= number_with_delimiter user.hitchhiked_kms
        %td
          = user.hitchhiked_countries
        %td
          = user.no_of_rides
        %td
          = flag_with_country_name(user)

= will_paginate users, class: 'flickr_pagination'
