- type ||= "normal"

- if fb_user = user.authentications.where(provider: 'facebook').first
  = image_tag "https://graph.facebook.com/#{fb_user.uid}/picture?type=#{type}"
- else
  - if type == 'square'
    = gravatar_image_tag user.email, gravatar: { :size => 25 }
  - else
    = gravatar_image_tag user.email
