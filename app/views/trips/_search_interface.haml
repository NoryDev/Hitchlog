.text-center
  = form_tag '', :method => 'get', class: 'trips_search' do
    = t('.sort_by')
    = check_box_tag 'photos', nil, params[:photos]
    %label{:for => 'photos'}= t('.photo')
    = check_box_tag 'stories', nil, params[:stories]
    %label{:for => 'stories'}= t('.story')
    = select_tag "experience", options_for_experiences.html_safe, :prompt => t('.select_experience')
    = select_tag "country", options_for_countries.html_safe, :prompt => t('.select_country')
    %br/
    = submit_tag t('.search'), class: 'btn btn-primary'
    -#<button type="submit" class="btn">Search</button>
