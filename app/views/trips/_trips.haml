%ul.trips
  - trips.each do |trip|
    .trips_index_box
      -#= render 'hitchhikes/hitchhike_buttons', :trip => trip
      %h2= trip
      %p
        #{trip.to_date}, #{pluralize(trip.hitchhikes.size, 'ride')},
        <b>#{distance( trip.distance )}</b> by #{link_to trip.user, user_path(trip.user)}

      = render 'rides_box', :trip => trip

  -#- for trip in trips
    %li
      = link_to_trip(trip, :remote => true).html_safe
      by
      = link_to(trip.user, user_path(trip.user))
      |
      = link_to "show ride", trip_path(trip)
      - if trip.user == current_user
        |
        = link_to "edit", edit_trip_path(trip)
        |
        = link_to "delete", trip_path(trip), :method => :delete, :confirm => 'Are you sure?' 
      = content_tag_for :ol, trip, :class => 'hidden hitchhike' do
        = render :partial => 'trips/list_hitchhikes', :locals => {:trip => trip}

  = will_paginate trips

