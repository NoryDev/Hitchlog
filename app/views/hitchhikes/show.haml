/ %p
/   %strong From:
/   = @hitchhike.from
/ %p
/   %strong To:
/   = @hitchhike.to
%h1= @hitchhike.title
%p=  @hitchhike.story
/ %p
/   %strong waiting_time:
/   = @hitchhike.waiting_time
/ %p
/   People:<br />
/   %strong Name:
/   = @hitchhike.people.first.name
/ %p
/   %strong Gender:
/   = @hitchhike.people.first.gender
/ %p
/   %strong Mission:
/   = @hitchhike.people.first.mission
/ %p
/   %strong Origin:
/   = @hitchhike.people.first.origin

%p
  cropped:
  %br/
  = image_tag @hitchhike.photo.url(:cropped) if @hitchhike.photo.file?
%p
  large:
  %br/
  = image_tag @hitchhike.photo.url(:large) if @hitchhike.photo.file?
%p
  = link_to "Edit", edit_hitchhike_path(@hitchhike)
  | 
  = link_to "Destroy", @hitchhike, :method => :delete, :confirm => 'Are you sure?'
  |
  = link_to "View All", hitchhikes_path
