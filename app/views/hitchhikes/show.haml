- if @hitchhike.title
  - title("#{@hitchhike.title} by #{@hitchhike.trip.user}")
- else
  - title("#{number_to_ordinal(@hitchhike.no_in_trip)} Hitchhike from #{@hitchhike.trip.from} to #{@hitchhike.trip.to}")

- if @hitchhike.story.blank?
  = render 'hitchhikes/show_date', :date => @hitchhike.trip.date if @hitchhike.trip.date
- else
  = render 'show_hitchhike', :hitchhike => @hitchhike  

- content_for :head do
  = javascript_include_tag 'hitchhike_photo'
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}  

-content_for :topmenu do
  = render 'layouts/hitchhike_photo', :hitchhike => @hitchhike