- hitchhike_show_title(@hitchhike)

.hitchhike_show_box
  = render 'hitchhikes/show_date', :date => @hitchhike.trip.start if @hitchhike.trip.start
  = render 'hitchhikes/hitchhike_buttons', :trip => @hitchhike.trip, :hitchhike => @hitchhike
  %h1= @hitchhike.trip
  %p= render :partial => 'hitchhikes/hitchhike_text'
  %p= this_is_your_hitchhike(@hitchhike.trip.user)

= render 'show_hitchhike', :hitchhike => @hitchhike unless @hitchhike.story.blank?

= render 'content_for_show_hitchhike'
