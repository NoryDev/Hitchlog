- hitchhike_show_title(@hitchhike)
%p= this_is_your_hitchhike(@hitchhike.trip.user)
- if @hitchhike.story.blank?
  = render 'hitchhikes/show_date', :date => @hitchhike.trip.start if @hitchhike.trip.start
- else
  = render 'show_hitchhike', :hitchhike => @hitchhike  

- content_for :head do
  = javascript_include_tag 'hitchhike_photo'
  %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}  

- content_for :topmenu do
  = render 'layouts/hitchhike_photo', :hitchhike => @hitchhike
