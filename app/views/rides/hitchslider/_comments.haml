- unless comments.empty?
  .hitchslider_comments
    %h2= t('hitchslider.comments')
    - comments.each do |comment|
      .hitchslider_comment
        %p= t('hitchslider.user_wrote', user: link_to(comment.user, user_path(comment.user))).html_safe
        = RDiscount.new(comment.body).to_html.html_safe
