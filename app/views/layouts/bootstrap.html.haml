!!!
%html{:lang => "en"}
  %head
    %title= content_for?(:title) ? "Hitchlog - #{yield(:title)}".html_safe : "Hitchlog"
    = csrf_meta_tag 
    = stylesheet_link_tag 'bootstrap_app'
    = yield(:head)

  %body
    = render 'layouts/navigation'

    .container#main-content
      = render 'layouts/flash_messages'

      = yield

  %footer#footer
    .container
      .row-fluid
        %h1 Hitchlog

  - if Rails.env == 'dev'
    = javascript_include_tag 'bootstrap', debug: true
  - else
    = javascript_include_tag 'bootstrap'
    = render 'shared/google_stats' if Rails.env == 'production'


  = yield(:javascript_at_bottom)
