.navbar.navbar-inverse
  .navbar-inner
    .container
      = link_to "#{image_tag("hitchlog_icon.png")} Hitchlog".html_safe, '', class: 'brand'
      %a{ class: "btn btn-navbar", 'data-toggle'=>"collapse", "data-target" => ".nav-collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul.nav
          %li= link_to '<i class="icon-home"></i> Home'.html_safe, root_path
          %li= link_to t('.about'), about_path
          %li= link_to "<i class='icon-suitcase'></i> #{t('.trips')}".html_safe, trips_path
          %li= link_to "<i class='icon-group'></i> #{t('.hitchhikers')}".html_safe, users_path

          %li.dropdown
            %a.dropdown-toggle{href: "#", "data-toggle"=>"dropdown"}
              = t('.navigation.language')
              %b.caret
            %ul.dropdown-menu
              - [ :en, :fr, :pt, :de ].each do |locale|
                %li
                  = link_to url_for(:locale => locale) do
                    != "<i class='icon-hand-right pull-left'></i>" if I18n.locale == locale
                    = image_tag "flags/png/#{locale}.png"

        - if user_signed_in?
          .pull-right
            .btn-group
              = link_to user_path(current_user), class: 'btn' do
                %i.icon-user
                = t('.your_profile')
              -#%button.btn
                -#= render 'users/profile_image', user: current_user, type: 'square'
              %a.btn.dropdown-toggle{'data-toggle' => 'dropdown'}
                %span.icon-caret-down
              %ul.dropdown-menu
                %li
                  = link_to edit_user_path(current_user) do
                    %i.icon-pencil
                    = t('.edit_profile')
                %li
                  = link_to new_trip_path do
                    %i.icon-book
                    = t('.log_new_trip')
                %li
                  = link_to future_trips_path do
                    %i.icon-eye-open
                    = t('.find_hitchhiking_buddy')
                %li
                  = link_to destroy_user_session_path do
                    %i.icon-ban-circle
                    = t('.sign_out')

        - else
          .pull-right
            = link_to new_user_session_path do
              %i.icon-user
