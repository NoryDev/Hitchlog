!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Hitchhike.me"
    = stylesheet_link_tag "application"
    = include_gmaps_javascripts
    = javascript_include_tag 'jquery-1.4.3.min', 'rails', 'site_photography', 'application'
    = csrf_meta_tag

    = yield(:head)
  %body
    %div{:style => "position: absolute; top:0; right:0;"}
      = link_to image_tag('forkme_right_white.png'), 'http://github.com/flov/hitchhike.me'
    .topmenu
      .top-wrapper
        = render :partial => 'layouts/site_photography'
    
    #container    
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      #user_nav
      - if user_signed_in? 
        = "Signed in as #{current_user.username}. Not you?"
        = link_to "Sign out", destroy_user_session_path
      - else
        = link_to "Sign up", new_user_registration_path
        or 
        = link_to "sign in", new_user_session_path 
      = yield