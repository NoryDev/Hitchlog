!!!
%html
  %head
    %title= content_for?(:title) ? "Hitchlog - #{yield(:title)}".html_safe : "Hitchlog"
    = meta_keywords
    = meta_description
    = stylesheet_link_tag "application"
    = javascript_include_tag 'jquery-1.4.3.min', 'jquery-ui-1.8.9.custom.min', 'jquery-ui-timepicker-addon', 'jquery.tipsy', 'showdown', 'rails', 'application'
    = yield(:head)
    = csrf_meta_tag    
    = javascript_google_stats
  %body
    = render 'shared/banners_in_corners'

    #wrap
      #topmenu
        = yield(:topmenu)
        %ul#main_nav
          %li#nav_home= link_to 'Home', root_path
          %li#nav_trips
            = link_to 'Trips', trips_path
            #nav_trips_dropdown=link_to 'New Trip', new_trip_path
          %li#nav_hitchhikes= link_to 'Hitchhikers', users_path
          %li#nav_about= link_to 'About', about_path
          %li#nav_authenitcation.right= render :partial => 'shared/sign_in_and_out'
          / %li#nav_manage=link_to 'Manage profile', edit_user_path(current_user) if user_signed_in?

      #container    
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
        = yield

    #footer
      &copy; 2010 Hitchlog - #{link_to 'About', ''}
  
    = uservoice_feedback
